<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.mvc.model.User" table="user" schema="" catalog="blog">
        <id name="userId">
            <column name="user_id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="userName">
            <column name="user_name" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="niceName">
            <column name="nice_name" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar" length="20" not-null="true"/>
        </property>
        <property name="picture">
            <column name="picture" sql-type="varchar"/>
        </property>
        <property name="registerDate">
            <column name="register_date" sql-type="date" length="10" not-null="true"/>
        </property>
        <property name="status">
            <column name="status" sql-type="int" length="10" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar" not-null="true"/>
        </property>
        <property name="role">
            <column name="role" sql-type="int" length="10" not-null="true"/>
        </property>
        <list name="comments" inverse="true">
            <key>
                <column name="user_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.mvc.model.Comment"/>
        </list>
        <list name="articles" inverse="true">
            <key>
                <column name="user_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.mvc.model.Article"/>
        </list>
    </class>
</hibernate-mapping>