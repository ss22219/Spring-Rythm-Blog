<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.mvc.model.Category" table="category" schema="" catalog="blog">
        <id name="categoryId">
            <column name="category_id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="int" length="10" not-null="true"/>
        </property>
        <property name="articleCount">
            <column name="article_count" sql-type="int" length="10" not-null="true"/>
        </property>
        <many-to-one name="parent" class="com.mvc.model.Category" not-null="true">
            <column name="parent_id"/>
        </many-to-one>
        <list name="children" inverse="true">
            <key>
                <column name="parent_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.mvc.model.Category"/>
        </list>
        <list name="articles" table="category_relation" schema="" catalog="blog">
            <key>
                <column name="category_id" not-null="true"/>
            </key>
            <many-to-many not-found="ignore" class="com.mvc.model.Article">
                <column name="article_id" not-null="true"/>
            </many-to-many>
        </list>
    </class>
</hibernate-mapping>