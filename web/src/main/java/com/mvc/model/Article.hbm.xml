<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.mvc.model.Article" table="article" schema="" catalog="blog">
        <id name="articleId">
            <column name="article_id" sql-type="int" length="10" not-null="true"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="text" length="65535" not-null="true"/>
        </property>
        <property name="createDate">
            <column name="create_date" sql-type="date" length="10" not-null="true"/>
        </property>
        <property name="modifyDate">
            <column name="modify_date" sql-type="date" length="10" not-null="true"/>
        </property>
        <property name="commentCount">
            <column name="comment_count" sql-type="int" length="10" not-null="true"/>
        </property>
        <property name="browseCount">
            <column name="browse_count" sql-type="int" length="10" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="int" length="10" not-null="true"/>
        </property>
        <property name="status">
            <column name="status" sql-type="int" length="10" not-null="true"/>
        </property>
        <property name="deleted">
            <column name="deleted" sql-type="bit" not-null="true"/>
        </property>
        <property name="userId">
            <column name="user_id" sql-type="int" length="10" not-null="true"/>
        </property>
        <many-to-one name="user" class="com.mvc.model.User">
            <column name="user_id" not-null="true"/>
        </many-to-one>
        <list name="categories" inverse="true" table="category_relation" schema="" catalog="blog">
            <key>
                <column name="article_id" not-null="true"/>
            </key>
            <many-to-many not-found="ignore" class="com.mvc.model.Category">
                <column name="category_id" not-null="true"/>
            </many-to-many>
        </list>
        <list name="comments" inverse="true">
            <key>
                <column name="article_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.mvc.model.Comment"/>
        </list>
    </class>
</hibernate-mapping>