@import com.mvc.model.*, com.mvc.util.*
@args(){
    String blogTitle,
    String webSite,
    String title,
    String blogDescription,
    List<Category> categories,
    List<Article> lastArticle,
    boolean isAdmin,
    String allRegister,
    Map<String,String> monthCategory,
    boolean isLogin
}
@extends(common.layout, title: title, blogTitle: blogTitle)
@section(header){
    @render(contentHeader)
    <link rel="stylesheet" href="@url("/Content/themes/BlueSpace/css/zdy2.css")" type="text/css" />
    <link rel="stylesheet" href="@url("/Content/themes/BlueSpace/style.css")" type="text/css" />
    <link rel="stylesheet" href="@url("/Content/themes/BlueSpace/css/zdy1.css")" type="text/css" />
    <script type="text/javascript" src="@url("/Content/themes/BlueSpace/js/alixixi_jquery.min.js")"></script>
    <script type="text/javascript" src="@url("/Content/themes/BlueSpace/js/script.js")"></script>
    <script type="text/javascript" src="@url("/Content/themes/BlueSpace/js/pngtm.js")"></script>
    <script type="text/javascript" src="@url("/Content/themes/BlueSpace/js/cfcoda.js")"></script>
    <script type="text/javascript">
        DD_belatedPNG.fix('div, ul, img, li, input , a , textarea , ol , p , span , h1 , h2 , h3 , h4 , h5');
    </script>

    <style type="text/css">
        .recentcomments a {
            display: inline !important;
            padding: 0 !important;
            margin: 0 !important;
        }
    </style>
    <style type="text/css">
        .recentcomments a {
            display: inline !important;
            padding: 0 !important;
            margin: 0 !important;
        }
    </style>
}
@include(content_head.html)
<div class="g3">
    <div class="g3_1">
       <link rel="stylesheet" href="@url("/Content/themes/BlueSpace/css/sidebar.css")" type="text/css" />
       <div id="sidebar">
           <div id="search-2" class="widget widget_search">
               <form action="@url("/search/")" id = "searchform2">
                   <div>
                       <label for="s" class="screen-reader-text"></label>
                       <input type="text" id="s" name="s" value="" />
                       <input type="submit" value="搜索" id="searchsubmit" onclick="window.location.href = '@url("/search/")' + $('#searchform2 #s').val(); return false;" />
                   </div>
               </form>
           </div>
           <div id="recent-posts-2" class="widget widget_recent_entries">
               <h2>近期文章</h2>
               <ul>
                   @for (Article item : lastArticle)
                   {
                   <li>
                       <a href="@url("/article/")@item.getTitle()" id="item.getArticleId()">@item.getTitle()</a>
                   </li>
                   }
               </ul>
           </div>
           <div id="recent-comments-2" class="widget widget_recent_comments">
               <h2>近期评论</h2>
               <ul id="recentcomments">
               </ul>
           </div>
           <div id="archives-2" class="widget widget_archive">
               <h2>文章归档</h2>
               <ul>
                   @for (String key in monthCategory.keySet())
                   {
                   <li>
                       <a href="@url("/category/moth/")@key" id="@key">@monthCategory.get(key)</a>
                   </li>
                   }
               </ul>
           </div>
           <div id="categories-2" class="widget widget_categories">
               <h2>分类目录</h2>
               <ul>
                   @for (Category category : categories)
                   {
                       @if(category.getType() == 0){
                        <li class="cat-item cat-item-@category.getCategoryId()"><a href="@url("/category/cat/")@category.getCategoryId()" id ="@category.getCategoryId()">@category.getName()</a></li>
                       }
                   }
               </ul>
           </div>
           <div id="meta-2" class="widget widget_meta">
               <h2>功能</h2>
               <ul>
                   @if (!isLogin)
                   {
                   @if (allRegister == "1")
                   {
                   <li><a href="@url("/member/register")">注册</a> </li>
                   }
                   <li><a href="@url("/member/login")">登录</a></li>
                   }
                   else
                   {
                   @if (isAdmin)
                   {
                   <li><a href="@url("/admin/")">管理</a></li>
                   }
                   else
                   {
                   <li><a href="@url("/admin/user/")">个人资料</a></li>
                   }
                   <li><a href="@url("/member/logOut/")">登出</a></li>
                   }
               </ul>
           </div>
           <!----评论----->
           <div class="pl_1">
               <h2>最新评论</h2>
               <ul>
               </ul>
           </div>
       </div>
    </div>
    <div class="g3_2">
        @render()
    </div>
</div>
@include(content_foot.html)